<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>pbox - @ViewBag.Title</title>
    <link href="~/Content/images/allapp-icon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <script src="~/Scripts/jquery-1.7.1.min.js"></script>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    
    <link href="~/Content/kendoui/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendoui/styles/kendo.metro.min.css" rel="stylesheet" />

    <script src="~/Content/kendoui/js/jquery.min.js"></script>
    <script src="~/Content/kendoui/js/kendo.web.min.js"></script>

    @RenderSection("headercontent", required: false)
    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    @Html.Partial("p_Header")

    <div>
        @RenderSection("featured", required: false)
    </div>

    <div id="body">
        <section class="content-wrapper main-content clear-fix order-page">
            <div id="main-panel" style="min-height:360px; width:600px">
                @RenderBody()
            </div>

            <div id="right-panel" style="width:330px">
                @RenderSection("rightpanel", required: false)
            </div>
        </section>
    </div>

    @Html.Partial("p_Footer")
    
    @*@Scripts.Render("~/bundles/jquery")*@
    @RenderSection("scripts", required: false)
</body>
</html>
