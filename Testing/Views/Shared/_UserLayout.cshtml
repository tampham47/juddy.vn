<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>pbox - @ViewBag.Title</title>
    <link href="~/Content/images/allapp-icon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    
    <link href="~/Content/kendoui/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendoui/styles/kendo.metro.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Content/kendoui/js/jquery.min.js"></script>
    <script src="~/Content/kendoui/js/kendo.web.min.js"></script>

    @RenderSection("headercontent", required: false)
    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    @Html.Partial("p_Header")
    <div>
        @RenderSection("featured", required: false)
    </div>

    <div id="body">
        <section class="content-wrapper main-content clear-fix">
            <div id="main-panel" style="min-height:360px">
                @RenderBody()
            </div>

            <div id="right-panel">
                @RenderSection("rightpanel", required: false)

                <div class="metro-panel">
                    <label>Your Business</label>
                    @Html.ActionLink("Manage categories", "Index", "Tag")
                    @Html.ActionLink("Manage products", "Own", "Product")
                    @Html.ActionLink("Orders", "Salesman", "Order")
                    @Html.ActionLink("Customers", "Index", "Tag")

                    <label style="margin-top:8px">Your infomation</label>
                    @Html.ActionLink("Infomation", "Index", "User")
                    @Html.ActionLink("Your Orders", "Customer", "Order")
                    @Html.ActionLink("Shopping cart", "Index", "Contact")
                    @Html.ActionLink("Favourites", "Favourite", "User")

                    <form action="~/Account/LogOff" id="logoutForm" method="post">
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                    </form>
                </div>
            </div>
        </section>
        @*<section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>*@
    </div>

    @Html.Partial("p_Footer")
    
    @*@Scripts.Render("~/bundles/jquery")*@
    @RenderSection("scripts", required: false)
</body>
</html>
