@model PbData.Entities.pb_Location

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="element">
    <div>Địa chỉ (*)</div>
    <div>
        @Html.TextBoxFor(m => m.Address, new { style = "width:670px; height:22px; font-size:16px" })
        <div>
            @Html.ValidationMessageFor(m => m.Address)
        </div>
    </div>
</div>
    
<div class="element">
    <div class="ImportantElement">Chọn vị trí (*)</div>
    <div id="map_canvas" style="width:100%; height:300px"></div>
</div>
    
<div class="element">
    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.LocationId)

    @Html.HiddenFor(m => m.Latitude)
    @Html.HiddenFor(m => m.Longitude)

    <div style="margin-top:5px">
        <input type="submit" value="Add Location" class="modern-button theme-a width120" style="border:none"/>
        <a href="@Url.Action("Index", "User")" class="modern-button theme-b width80">Cancel</a>
    </div>
</div>
