@model IEnumerable<PbData.Entities.pb_HashTag>

@{
    ViewBag.Title = "Tags";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div>
    <div style="float:right; display:inline-block">
        <a href="@Url.Action("Add", "Tag")" >
            <img src="@Url.Content("/Content/images/base-add-light.png")" width="30" style="margin-top:7px"
                onmouseover="this.src='@Url.Content("/Content/images/base-add-dark.png")'"
                onmouseout="this.src='@Url.Content("/Content/images/base-add-light.png")'" /></a>
    </div>

    <hgroup class="title">
        <h1>@ViewBag.Title.</h1>
        <h2>@ViewBag.Message</h2>
    </hgroup>
</div>

@foreach (var item in Model)
{
    <div>
        <div style="display:inline-block; width:100px">
            <a href="@Url.RouteUrl("tagName", new { item.TagName })">
                <img src="~/PencilBox_Data/TagIcons/@item.IconPath" width="100" height="100" /></a>
        </div>

        <div style="display:inline-block; vertical-align:top">
            <a href="@Url.RouteUrl("tagName", new { item.TagName })" style="vertical-align:top; font-weight:bold">#@item.TagName</a><br />
            <b style="vertical-align:top">@item.TextName</b></div>
    </div>
}