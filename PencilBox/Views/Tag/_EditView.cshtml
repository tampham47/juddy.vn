@model PbData.Entities.pb_HashTag

@{
    Layout = null;
}

<table>
    <tr>
        <td style="text-align:right; width:90px">Text Name</td>
        <td>
            @Html.TextBoxFor(m => m.TextName)
        </td>
    </tr>
    <tr>
        <td style="text-align:right">HashTag</td>
        <td>
            @Html.TextBoxFor(m => m.TagName)
        </td>
    </tr>

    <tr>
        <td style="text-align:right">Icon</td>
        <td>
            <input name="attachments" id="upload_files" type="file" />
        </td>
    </tr>

    <tr>
        <td style="text-align:right">Description</td>
        <td>
            @Html.TextAreaFor(m => m.Description)
        </td>
    </tr>

    <tr>
        <td style="text-align:right"></td>
        <td>
            @Html.HiddenFor(m => m.UserId)
            @Html.HiddenFor(m => m.HashTagId)
            @Html.HiddenFor(m => m.Type)
            @Html.HiddenFor(m => m.IconPath)
            <input type="submit" value="Publish" class="modern-button theme-a width120" />

            <a href="@Url.Action("Index", "Tag")" 
                class="modern-button theme-b" 
                style="display:inline-block; width:120px;">Cancel</a>
        </td>
    </tr>
</table>
