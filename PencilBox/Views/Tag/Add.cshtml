@model PbData.Entities.pb_HashTag

@{
    ViewBag.Title = "Tạo shop";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>
    label {
        font-weight:normal;
    }
</style>

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewBag.Message</h2>
</hgroup>

<form class="form-horizontal" role="form" method="post">
    <div class="form-group" style="margin-bottom:0px">
        <label for="textName" class="col-sm-3 control-label">Tên shop</label>
        <div class="col-sm-9">
            <input name="@Html.NameFor(m=>m.TextName)" type="text" class="form-control" id="textName" placeholder="text name" >
            <span class="help-block">Thời trang bé yêu</span>
        </div>
    </div>

    <div class="form-group" style="margin-bottom:0px">
        <label for="hashtag" class="col-sm-3 control-label">Hashtag của shop</label>
        <div class="col-sm-9">
            <input name="@Html.NameFor(m=>m.TagName)" type="text" class="form-control" id="hashtag" placeholder="hash tag" >
            <span class="help-block"><a href="http://juddy.vn/thoitrangbeyeu"><span>http://juddy.vn/</span><b>thoitrangbeyeu</b></a></span>
        </div>
    </div>
    
    @*<div class="form-group">
        <label for="description" class="col-sm-3 control-label">danh mục sản phẩm (tag)</label>
        <div class="col-sm-9">
            <textarea name="@Html.NameFor(m=>m.Description)" class="form-control" rows="4"></textarea>
            <span class="help-block">thoitrangbetrai (thời trang bé trai), thoitrangbegai (thời trang bé gái)</span>
        </div>
    </div>*@

    <div class="form-group">
        <label for="iconUpload" class="col-sm-3 control-label">icon</label>
        <div class="col-sm-9">
            <input name="attachments" id="upload_files" type="file" />
            @*<span class="help-block">bạn nên có một icon đặc trưng cho shop của mình</span>*@
        </div>
    </div>

    <div class="form-group">
        <label for="description" class="col-sm-3 control-label">mô tả shop</label>
        <div class="col-sm-9">
            <textarea name="@Html.NameFor(m=>m.Description)" class="form-control" rows="5"></textarea>
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(m => m.UserId)

        <label for="description" class="col-sm-3 control-label"></label>
        <div class="col-sm-9">
            <button type="submit" class="btn btn-success">tạo shop</button>
            <a href="/" class="btn btn-default">hủy</a>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function () {
        $("#upload_files").kendoUpload({
            async: {
                saveUrl: "/Upload/TagIcon",
                multiple : false,
                autoUpload: true
            }
        });
    })

</script>