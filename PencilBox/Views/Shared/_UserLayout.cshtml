<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>juddy/@ViewBag.Title</title>
    <link href="~/Content/images/allapp-icon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    
    <link href="~/Content/kendoui/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendoui/styles/kendo.metro.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    

    @RenderSection("headercontent", required: false)
    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")*@
</head>
<body>
    @Html.Partial("p_Header")
    <div>
        @RenderSection("featured", required: false)
    </div>

    <div id="body">
        <section class="content-wrapper main-content clear-fix">
            <div id="main-panel" style="min-height:360px">
                @RenderBody()
            </div>

            <div id="right-panel">
                @RenderSection("rightpanel", required: false)

                <div class="metro-panel">
                    <div class="theme-g">Kinh doanh</div>
                    @Html.ActionLink("Quản lý shop", "index", "tag")
                    @Html.ActionLink("Quản lý sản phẩm", "own", "product")
                    @Html.ActionLink("Quản lý đơn đặt hàng", "salesman", "order")
                    @*@Html.ActionLink("Customers", "Index", "Tag")*@

                    <div class="theme-g" style="margin-top:8px">Người dùng</div>
                    @Html.ActionLink("Thông tin người dùng", "index", "user")
                    @Html.ActionLink("Đơn đặt hàng", "customer", "order")
                    @*@Html.ActionLink("Shopping cart", "Index", "Contact")*@
                    @Html.ActionLink("Sản phẩm yêu thích", "favourite", "user")

                    <form action="@Url.RouteUrl("default", new { controller = "account", action = "logoff" })" id="logoutForm" method="post">
                        @Html.AntiForgeryToken()
                        <a href="javascript:document.getElementById('logoutForm').submit()">Đăng xuất</a>
                    </form>
                </div>
            </div>
        </section>
    </div>

    @Html.Partial("p_Footer")
    
    @*@Scripts.Render("~/bundles/jquery")*@
    <script src="~/Content/kendoui/js/jquery.min.js"></script>
    <script src="~/Content/kendoui/js/kendo.web.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $(".dropDown").kendoDropDownList();
        })

        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-46123038-1', 'juddy.vn');
        ga('send', 'pageview');
    </script>
</body>
</html>
