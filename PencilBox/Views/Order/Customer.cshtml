@model IEnumerable<PbData.Entities.pb_Order>

@{
    ViewBag.Title = "Đơn đặt hàng";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@if (Model.Count() == 0)
{
    <p>Bạn chưa đặt hàng sản phẩm nào, hãy lướt qua một vòng và tìm món hàng bạn yêu thích.</p>
}

@foreach (var item in Model)
{
    @Html.Partial("p_OrderView", item)
}