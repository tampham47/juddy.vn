@model IEnumerable<PbData.Entities.pb_Product>

@{
    ViewBag.Title = "Sản phẩm yêu thích";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@if (Model.Count() == 0)
{
    <p>Bạn chưa yêu thích sản phầm nào, hãy lướt qua một vòng và tìm món hàng bạn yêu thích.</p>
}

@foreach (var item in Model)
{
    @Html.Partial("~/Views/Product/p_ProductView.cshtml", item)
}